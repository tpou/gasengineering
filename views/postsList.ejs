
<% include partials/header %>

<!-- /views/postsList.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Home | My blog</title>
    </head>
    <body>
        <section class="text-left p-4">
            <h1>
                Welcome to my blog
            </h1>
            <h3>
                List of recent posts:
            </h3>
        </section>
        <section class="text-center">
           <% posts.forEach(post => { %>
           <!-- Get the Markdown filename without it's extension -->
           <% const postFilename = post[0].replace(/\.[^/.]+$/, "") %>
           <br/>
           <!-- Get the Markdown post title from it's front matter -->
           <% const postTitle = post[1].data.title %>
           <!-- Render the title as a link to the post -->
           <h4><a href="/posts/<%= postFilename %>"><%= postTitle%></a></h4>
           <% }) %>
        </section>


    </body>
</html>

<% include partials/footer %>